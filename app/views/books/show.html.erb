<p><%= flash[:notice] %></p>
<div class="container">

  <%= render 'error', book: @book %>

  <%= render 'user', user: @user %>

      <%= render 'book', book: Book.new %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %><br>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>